mixin pic(path, image, format, width, height, altText)
  picture(class!=attributes.class)
    source(type="image/webp", srcset="img/" + path + "/" + image + "@1x.webp" + ", " + "img/" + path + "/" + image + "@2x.webp" + " 2x", width= width, height= height)
    img(src="img/" + path + "/" + image + "@1x." + format, srcset= "img/" + path + "/" + image + "@2x." + format + " 2x", width= width, height= height, alt= altText, loading="lazy")&attributes(attributes)
